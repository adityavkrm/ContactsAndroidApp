<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity2"
    android:background="@drawable/contact_profile_back_gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textAllCaps="false"
        android:textColor="#4361ee"
        android:background ="@null"
        android:textStyle="bold"
        android:textSize="20dp"
        android:drawableStart="@drawable/baseline_arrow_back_24"
        />

        <ImageButton
            android:id="@+id/sharebutton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sharebutton"
            android:text="Share Contact"
            android:textAllCaps="false"
            android:textColor="#4361ee"
            android:textSize="17sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/personimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:src="@drawable/profilepic" />

    <TextView
        android:id="@+id/personname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:text="Name"
        android:layout_marginBottom="40dp"
        android:textAllCaps="false"
        android:textColor="#3c096c"
        android:textSize="28sp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:background="@drawable/contact_profile_shape"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageButton
            android:id="@+id/callbutton"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/newcall"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="80dp"
            android:scaleType="fitCenter" />


            <ImageButton
                android:id="@+id/smsbutton"
                android:layout_width="90dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/newsms"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="80dp"
                android:scaleType="fitCenter"/>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:textSize="16dp"
                android:layout_marginLeft="110dp"
                android:textColor="#4361ee"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sms"
                android:textColor="#4361ee"
                android:textSize="16dp"
                android:layout_marginRight="110dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/contact_profile_shape"
                android:backgroundTint="#9AFEEAFA">

                <TextView
                    android:id="@+id/personnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentTop="true"
                    android:textColor="#3c096c"
                    android:textSize="23dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile | India"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="35dp"
                    android:textColor="#4361ee"
                    android:textSize="18dp"/>

            </RelativeLayout>



</LinearLayout>

</LinearLayout>


